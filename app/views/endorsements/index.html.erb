<div class="container">

  <h2>Endorsements</h2>
  <% if @endorsements.any? %>
  <h4>Endorsements you've received:</h4>
    <% @endorsements.each do |endorsement, index| %>
    <div class="panel panel-info">
      <div class="panel-heading" id="endorsement_header_<%=index%>">
        <b><%= link_to "#{endorsement.headline}", endorsement_path(endorsement) %></b>
      </div>
      <div class="panel-body" id="endorsement_content_<%=index%>">
        <p>Category: <%= endorsement.category %></p>
        Description: <%= truncate(endorsement.description, length: 20)%>
        <b><%= link_to "Submit", new_endorsement_path %></b>
      </div>
    </div>
  <% end %>
  <% else %>
  You do not have any endorsements yet
  <% end %>
</div>
